<UserControl x:Class="SmartPos.Views.Factura.FacturacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F1F3F5" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="CÓDIGO DE ARTÍCULO / ESCÁNER" FontWeight="Bold" FontSize="11" Foreground="#495057" Margin="2,0,0,5"/>


                    <TextBox x:Name="TxtBusqueda" 
         Text="{Binding BusquedaArticulo, UpdateSourceTrigger=PropertyChanged}"
         mah:TextBoxHelper.Watermark="Escanee o escriba el código..."
         FontSize="20" 
         FontWeight="SemiBold"
         mah:TextBoxHelper.SelectAllOnFocus="True"
         
         Style="{StaticResource MahApps.Styles.TextBox.Button}"
         >

                        <mah:TextBoxHelper.ButtonContent>
                            <Button Command="{Binding AbrirBuscadorArticulosCommand}"
                            Width="40"
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Center"
                            Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <TextBlock Text="🔍" Foreground="#005A9E"/>
                                </Viewbox>
                            </Button>
                        </mah:TextBoxHelper.ButtonContent>

                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding AgregarArticuloCommand}"/>
                            <KeyBinding Key="F2" Command="{Binding AbrirBuscadorArticulosCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="VENDEDOR" FontWeight="Bold" FontSize="11" Foreground="#495057" Margin="2,0,0,5"/>
                    <ComboBox Height="40" mah:TextBoxHelper.Watermark="Seleccione vendedor"
                              ItemsSource="{Binding Vendedores}" 
                              SelectedItem="{Binding VendedorSeleccionado}"/>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FacturaDetalle}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}"
                  FontSize="15" 
                  RowHeight="40"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="#DEE2E6">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CÓDIGO" Binding="{Binding ArticuloId}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding DescripcionExtendida}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="CANT" Binding="{Binding Cantidad}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio, StringFormat='{}{0:N2}'}" Width="120"/>
                <DataGridTextColumn Header="IMPTO" Binding="{Binding Impuesto, StringFormat='{}{0:N2}'}" Width="100"/>
                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='{}{0:N2}'}" Width="130" FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#005A9E" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Margin" Value="0,0,10,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
                <Border Background="#E9ECEF" Padding="8,4" CornerRadius="4" Margin="0,0,10,0">
                    <TextBlock Text="F12: Cobrar" FontSize="12" FontWeight="SemiBold"/>
                </Border>
                <Border Background="#E9ECEF" Padding="8,4" CornerRadius="4" Margin="0,0,10,0">
                    <TextBlock Text="DEL: Eliminar Línea" FontSize="12" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>

            <Border Grid.Column="1" Background="#005A9E" CornerRadius="8" Padding="20,10" MinWidth="350">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="SUBTOTAL" Foreground="#A9D4FF" FontSize="12" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Encabezado.Total, StringFormat='{}{0:N2}'}" Foreground="White" HorizontalAlignment="Right" FontSize="16"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <TextBlock Text="IMPUESTO (ISV)" Foreground="#A9D4FF" FontSize="12" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Encabezado.Impuesto, StringFormat='{}{0:N2}'}" Foreground="White" HorizontalAlignment="Right" FontSize="16"/>
                    </Grid>
                    <Separator Background="#3385C2" Margin="0,10"/>
                    <Grid>
                        <TextBlock Text="TOTAL NETO" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Encabezado.Total, StringFormat='L. {0:N2}'}" Foreground="White" HorizontalAlignment="Right" FontSize="32" FontWeight="Black"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>