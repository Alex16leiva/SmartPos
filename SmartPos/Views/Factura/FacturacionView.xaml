<UserControl x:Class="SmartPos.Views.Factura.FacturacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding LimpiarPantallaCommand}"/>
        <KeyBinding Key="F12" Command="{Binding PagarCommand}"/>
    </UserControl.InputBindings>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F1F3F5" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="CÓDIGO DE ARTÍCULO / ESCÁNER" FontWeight="Bold" FontSize="11" Foreground="#495057" Margin="2,0,0,5"/>


                    <TextBox x:Name="TxtBusqueda" 
                        Text="{Binding BusquedaArticulo, UpdateSourceTrigger=PropertyChanged}"
                        mah:TextBoxHelper.Watermark="Escanee o escriba el código..."
                        FontSize="20" 
                        FontWeight="SemiBold"
                        mah:TextBoxHelper.SelectAllOnFocus="True"
                        Style="{StaticResource MahApps.Styles.TextBox.Button}"
                    >

                        <mah:TextBoxHelper.ButtonContent>
                            <Button Command="{Binding AbrirBuscadorArticulosCommand}"
                            Width="40"
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Center"
                            Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <TextBlock Text="🔍" Foreground="#005A9E"/>
                                </Viewbox>
                            </Button>
                        </mah:TextBoxHelper.ButtonContent>

                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding AgregarArticuloCommand}"/>
                            <KeyBinding Key="F2" Command="{Binding AbrirBuscadorArticulosCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="VENDEDOR" FontWeight="Bold" FontSize="11" Foreground="#495057" Margin="2,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Vendedores}"
              SelectedItem="{Binding VendedorSeleccionado}"
              DisplayMemberPath="NombreCompleto" 
              mah:TextBoxHelper.Watermark="Seleccione Vendedor..."
              FontSize="16" Width="250">
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" 
                  x:Name="DGTable"
                  ItemsSource="{Binding FacturaDetalle}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}"
                  FontSize="15" 
                  RowHeight="40"
                  CellEditEnding="DataGrid_CellEditEnding"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="#DEE2E6">
            <DataGrid.Columns>

                <DataGridTemplateColumn Width="28">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.EliminarArticuloCommand, 
                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MahApps.Styles.Button.Chromeless}"
                                    Foreground="Red"
                                    ToolTip="Eliminar artículo">
                                <TextBlock Text="❌" FontSize="16"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="CÓDIGO" Binding="{Binding ArticuloId}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding DescripcionExtendida}" Width="*" IsReadOnly="True"/>

                <DataGridTextColumn
                                Width="130"
                                Binding="{Binding Cantidad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Header=" Cantidad" />

                <DataGridTextColumn Header="PRECIO" IsReadOnly="True" Binding="{Binding Precio, StringFormat='{}{0:N2}'}" Width="120"/>
                <DataGridTextColumn Header="IMPTO" IsReadOnly="True" Binding="{Binding Impuesto, StringFormat='{}{0:N2}'}" Width="100"/>
                <DataGridTextColumn Header="TOTAL" IsReadOnly="True" Binding="{Binding Total, StringFormat='{}{0:N2}'}" Width="130" FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#005A9E" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Margin" Value="0,0,10,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#DEE2E6" BorderThickness="1" Background="#F8F9FA" Padding="10" MinWidth="400">
                <UniformGrid Columns="3">
                    <StackPanel Margin="5">
                        <TextBlock Text="Sub Total" FontSize="14" FontWeight="Bold" Foreground="#495057"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="L. " FontSize="20" VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                            <TextBlock Text="{Binding Encabezado.SubTotal, StringFormat='{}{0:N2}'}" FontSize="36" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Impuesto" FontSize="14" FontWeight="Bold" Foreground="#495057" Margin="10,0,0,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                            <TextBlock Text="L. " FontSize="20" VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                            <TextBlock Text="{Binding Encabezado.Impuesto, StringFormat='{}{0:N2}'}" FontSize="36" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Total" FontSize="14" FontWeight="Bold" Foreground="#495057"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="L. " FontSize="20" VerticalAlignment="Bottom" Margin="0,0,5,5"/>
                            <TextBlock Text="{Binding Encabezado.Total, StringFormat='{}{0:N2}'}" FontSize="42" FontWeight="Black" Foreground="#28A745"/>
                        </StackPanel>
                    </StackPanel>
                </UniformGrid>
            </Border>

            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding MostrarVentanaDePagoCommand}" Background="#28A745" Foreground="White" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Pagar" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="[F12]" FontSize="10" HorizontalAlignment="Center" Opacity="0.8"/>
                    </StackPanel>
                </Button>

                <UniformGrid Grid.Column="1" Rows="2" Columns="4">
    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Reporte Z" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"
                mah:ControlsHelper.ContentCharacterCasing="Normal"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Fijar Cliente" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White" 
                Command="{Binding AbrirBusquedaClientesCommand}"
                mah:ControlsHelper.ContentCharacterCasing="Normal"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="En Espera" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Recuperar" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Devolucion" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Limpiar Pantalla" 
                Command="{Binding LimpiarPantallaCommand}"
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Cotizar" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>

    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="1">
        <Button Content="Fact Nombre" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Background="White"/>
    </Border>
</UniformGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>