<UserControl x:Class="SmartPos.Views.InventarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartPos.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox mah:TextBoxHelper.Watermark="Buscar por nombre o código..." 
                         mah:TextBoxHelper.ClearTextButton="True"
                         Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                         Width="400" FontSize="16" Height="35"/>
                <mah:ProgressRing IsActive="{Binding IsBusy}" Margin="15,0,0,0" Width="25" Height="25"/>

                <Button Command="{Binding NuevoArticuloCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        Height="35" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE109;" 
                            FontFamily="Segoe MDL2 Assets" 
                            VerticalAlignment="Center" 
                            Margin="0,0,8,0"/>
                        <TextBlock Text="NUEVO ARTÍCULO" 
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Articulos}" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{StaticResource MahApps.Styles.DataGrid.Azure}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Acciones" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.EditarArticuloCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                                        Padding="0" Height="25" Width="25"
                                        ToolTip="Editar Artículo">
                                    <TextBlock Text="&#xE70F;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14" 
                                               Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Código" Binding="{Binding ArticuloId}" Width="100"/>
                    <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="*"/>
                    <DataGridTextColumn Header="Descripcion Extendida" Binding="{Binding DescripcionExtendida}" Width="*"/>
                    <DataGridTextColumn Header="Existencia" Binding="{Binding Cantidad}" FontWeight="Bold" Width="100"/>

                    <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock.DataGrid}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <TextBlock Text="Registros por página: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox SelectedValue="{Binding SelectedPageSize}" 
                          ItemsSource="{Binding TamañosPagina}" 
                          SelectedItem="{Binding RegistrosPorPagina}" 
                          Margin="0,0,20,0"/>
                <Button Command="{Binding AnteriorPaginaCommand}" Content="◀" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0">
                    <Run Text="Página "/>
                    <Run Text="{Binding PaginaActual}" FontWeight="Bold"/>
                    <Run Text=" de "/>
                    <Run Text="{Binding TotalPaginas}" FontWeight="Bold"/>
                </TextBlock>
                <Button Command="{Binding SiguientePaginaCommand}" Content="▶" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
            </StackPanel>
        </Grid>

        <Border Background="#40000000" 
                Visibility="{Binding IsEditFlyoutOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="10">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CerrarEdicionCommand}"/>
            </Border.InputBindings>
        </Border>

        <mah:FlyoutsControl Panel.ZIndex="11">
            <mah:Flyout Header="GESTIÓN DE ARTÍCULO" 
            Position="Right" 
            Width="450" 
            Theme="Adapt"
            IsOpen="{Binding IsEditFlyoutOpen}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <StackPanel>
                            <TextBlock Text="Datos Principales" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                            <TextBlock Text="Código de Artículo (ID)"/>
                            <TextBox Text="{Binding ArticuloSeleccionado.ArticuloId}" 
                         IsEnabled="{Binding IsNuevoArticulo}" 
                         Margin="0,5,0,15" mah:TextBoxHelper.Watermark="Ej: 1001"/>

                            <TextBlock Text="Descripción Corta"/>
                            <TextBox Text="{Binding ArticuloSeleccionado.Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,0,15" mah:TextBoxHelper.Watermark="Nombre del producto"/>

                            <TextBlock Text="Descripción Extendida"/>
                            <TextBox Text="{Binding ArticuloSeleccionado.DescripcionExtendida}" 
                         AcceptsReturn="True" Height="60" TextWrapping="Wrap" Margin="0,5,0,15"/>

                            <Separator Margin="0,10"/>
                            <TextBlock Text="Precios y Costos" FontSize="16" FontWeight="Bold" Margin="0,10,0,10" Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Costo Actual"/>
                                    <mah:NumericUpDown Value="{Binding ArticuloSeleccionado.Costo}" StringFormat="C2" Margin="0,5,0,15"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Precio Venta"/>
                                    <mah:NumericUpDown Value="{Binding ArticuloSeleccionado.Precio}" StringFormat="C2" Margin="0,5,0,15"/>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,10"/>
                            <TextBlock Text="Inventario" FontSize="16" FontWeight="Bold" Margin="0,10,0,10" Foreground="{DynamicResource MahApps.Brushes.Accent}"/>

                            <TextBlock Text="Cantidad Inicial (Existencia)"/>
                            <mah:NumericUpDown Value="{Binding ArticuloSeleccionado.Cantidad}" 
                                   IsEnabled="{Binding IsNuevoArticulo}"
                                   Margin="0,5,0,15"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,20">
                                <Button Content="CANCELAR" Command="{Binding CerrarEdicionCommand}" 
                            Style="{StaticResource MahApps.Styles.Button.Flat}" Margin="0,0,10,0"/>
                                <Button Content="GUARDAR ARTÍCULO" 
                            Command="{Binding GuardarCambiosCommand}"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Width="150"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </Grid>
</UserControl>
