<mah:MetroWindow x:Class="SmartPos.Views.BusquedaArticuloView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="BUSCADOR DE ARTÍCULOS" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" 
                 Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                 mah:TextBoxHelper.Watermark="Escriba para buscar por código o descripción..."
                 mah:TextBoxHelper.ClearTextButton="True"
                 FontSize="16" Margin="0,0,0,10"
                 mah:TextBoxHelper.AutoWatermark="True">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding LoadDataBusquedaCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ArticulosBusqueda}" 
                  SelectedItem="{Binding ArticuloBusquedaSeleccionado, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SeleccionarClienteCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="CÓDIGO" Binding="{Binding ArticuloId}" Width="150"/>
                <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTextColumn Header="PRECIO" Binding="{Binding Precio, StringFormat='N2'}" Width="100"/>
                <DataGridTextColumn Header="STOCK" Binding="{Binding Cantidad}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Command="{Binding AnteriorPaginaCommand}" Content="◀" Width="40" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0">
                    <Run Text="Página "/>
                    <Run Text="{Binding PaginaActual}" FontWeight="Bold"/>
                    <Run Text=" de "/>
                    <Run Text="{Binding TotalPaginas}"/>
                </TextBlock>
                <Button Command="{Binding SiguientePaginaCommand}" Content="▶" Width="40" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="CANCELAR" Width="100" IsCancel="True" Margin="0,0,10,0"/>
                <Button Content="SELECCIONAR" Width="120" 
                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                        Background="#28A745" Foreground="White"
                        Click="BtnSeleccionar_Click"/>
            </StackPanel>
        </Grid>

        <mah:ProgressRing Grid.Row="1" IsActive="{Binding IsBusy}"/>
    </Grid>
</mah:MetroWindow>