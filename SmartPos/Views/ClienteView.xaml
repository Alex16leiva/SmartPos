<UserControl x:Class="SmartPos.Views.ClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox mah:TextBoxHelper.Watermark="Buscar por nombre, cuenta o identidad..." 
                         mah:TextBoxHelper.ClearTextButton="True"
                         Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                         Width="400" FontSize="16" Height="35"/>

                <mah:ProgressRing IsActive="{Binding IsBusy}" Margin="15,0,0,0" Width="25" Height="25"/>

                <Button Command="{Binding NuevoClienteCommand}"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                        Height="35" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE109;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="NUEVO CLIENTE" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Clientes}" 
                      SelectedItem="{Binding ClienteSeleccionado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{StaticResource MahApps.Styles.DataGrid.Azure}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Acciones" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.EditarClienteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                                        Padding="0" Height="25" Width="25">
                                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                               Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Cuenta" Binding="{Binding NumeroCuenta}" Width="100"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Width="*"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding NumeroTelefono1}" Width="120"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding CorreoElectronico}" Width="200"/>
                    <DataGridTextColumn Header="Identidad/RTN" Binding="{Binding TextoPersonalizado1}" Width="150"/>
                    <DataGridTextColumn Header="Limite de credito" Binding="{Binding LimiteCredito, StringFormat=C2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock.DataGrid}">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Saldo" Binding="{Binding SaldoCuenta, StringFormat=C2}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock.DataGrid}">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <TextBlock Text="Registros: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding TamañosPagina}" 
                          SelectedItem="{Binding RegistrosPorPagina}" 
                          Margin="0,0,20,0"/>

                <Button Command="{Binding AnteriorPaginaCommand}" Content="◀" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0">
                    <Run Text="Página "/>
                    <Run Text="{Binding PaginaActual}" FontWeight="Bold"/>
                    <Run Text=" de "/>
                    <Run Text="{Binding TotalPaginas}" FontWeight="Bold"/>
                </TextBlock>
                <Button Command="{Binding SiguientePaginaCommand}" Content="▶" Style="{StaticResource MahApps.Styles.Button.Flat}"/>
            </StackPanel>
        </Grid>

        <Border Background="#40000000" 
                Visibility="{Binding IsEditFlyoutOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="10">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CerrarEdicionCommand}"/>
            </Border.InputBindings>
        </Border>

        <mah:FlyoutsControl Panel.ZIndex="11">
            <mah:Flyout Header="DATOS DEL CLIENTE" 
                        Position="Right" 
                        Width="450" 
                        IsOpen="{Binding IsEditFlyoutOpen}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <TextBlock Text="IDENTIFICACIÓN" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
                        <Separator Margin="0,5,0,15"/>

                        <TextBlock Text="Número de Cuenta"/>
                        <TextBox Text="{Binding ClienteSeleccionado.NumeroCuenta}" 
                                 IsEnabled="{Binding IsNuevoCliente}"
                                 Margin="0,5,0,15" mah:TextBoxHelper.Watermark="Automático o manual"/>

                        <TextBlock Text="RTN / Identidad"/>
                        <TextBox Text="{Binding ClienteSeleccionado.TextoPersonalizado1}" 
                                 Margin="0,5,0,15" mah:TextBoxHelper.Watermark="0000-0000-00000"/>

                        <TextBlock Text="INFORMACIÓN PERSONAL" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,10,0,0"/>
                        <Separator Margin="0,5,0,15"/>

                        <TextBlock Text="Nombre(s) *"/>
                        <TextBox Text="{Binding ClienteSeleccionado.Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,5,0,15"/>

                        <TextBlock Text="Apellido(s)"/>
                        <TextBox Text="{Binding ClienteSeleccionado.Apellido}" 
                                 Margin="0,5,0,15"/>

                        <TextBlock Text="CONTACTO" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,10,0,0"/>
                        <Separator Margin="0,5,0,15"/>

                        <TextBlock Text="Teléfono"/>
                        <TextBox Text="{Binding ClienteSeleccionado.NumeroTelefono1}" Margin="0,5,0,15"/>

                        <TextBlock Text="Correo"/>
                        <TextBox Text="{Binding ClienteSeleccionado.CorreoElectronico}" Margin="0,5,0,15"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,40">
                            <Button Content="CANCELAR" Command="{Binding CerrarEdicionCommand}" 
                                    Style="{StaticResource MahApps.Styles.Button.Flat}" Margin="0,0,10,0"/>

                            <Button Command="{Binding GuardarCambiosCommand}"
                                    Width="180">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Square.Accent}">
                                        <Setter Property="Content" Value="GUARDAR CAMBIOS" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNuevoCliente}" Value="True">
                                                <Setter Property="Content" Value="CREAR CLIENTE" />
                                                <Setter Property="Background" Value="#FF288C28" />
                                                <Setter Property="BorderBrush" Value="#FF288C28" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </Grid>
</UserControl>